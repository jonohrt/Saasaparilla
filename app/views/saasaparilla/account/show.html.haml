%h1 Account

%h2 Contact Info

%p
	= "#{@account.contact_info.first_name} #{@account.contact_info.last_name}"
	%br
	= @account.contact_info.email
	%br
	= @account.contact_info.address
	%br
	= "#{@account.contact_info.city}, #{@account.contact_info.state} #{@account.contact_info.zip}"
	%br
	= @account.contact_info.country
	%br
	= "#{@account.contact_info.phone_number}"
%p
	= link_to "Update", edit_account_contact_info_path(@account.contact_info)
	
%h2 Billing Info

%p
	%label Card Number
	%br

	= @account.credit_card.card_number
%p
	%label Expiration
	%br
	=@account.credit_card.expiration_date
%p	
	= link_to "Update", edit_account_credit_card_path(@account.credit_card)
	
%h2 Billing History
%table
	
- for activity in @account.billing_activities.recent.limit(5)
	%tr
		%td
			= activity.created_at.to_s(:month_day_year)
		%td
			= activity.message
		%td
			= number_to_currency(activity.amount)
			
			
%p
	Your account has been active since
	= @account.created_at.to_s(:month_day_year)

%p
	= link_to "Cancel Account", @account, :method => "delete", :confirm => "Are you sure you want to cancel your account?"